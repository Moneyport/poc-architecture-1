{
  "name": "arch_poc_participants",
  "version": "0.1.0",
  "description": "mojaloop arch poc all-in-one participants service",
  "license": "Apache-2.0",
  "homepage": "https://github.com/mojaloop/poc-architecture",
  "bugs": {
    "url": "https://github.com/mojaloop/<repo-name>/issues#readme"
  },
  "author": "Pedro Barreto <pedrosousabarreto@gmail.com",
  "contributors": [
    "Miguel de Barros <miguel.debarros@modusbox.com>"
  ],
  "main": "application/index.js",
  "pre-commit": [
    "dep:check",
    "build",
    "lint",
    "test:unit"
  ],
  "scripts": {
    "start:participants": "tsc && node dist/participants/application/index.js",
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rm -Rf dist",
    "pretest": "npm run build",
    "standard": "echo '\\033[1;33m  This project uses eslint instead of standard. Use `npm run lint` instead.'",
    "lint": "eslint ./src/**/*.ts ./test/**/*.ts",
    "test:unit": "jest --testMatch '**/test/unit/**/*.test.ts'",
    "test:coverage": "jest --coverage --coverageThreshold='{}' --testMatch '**/test/unit/**/*.test.ts'",
    "test:coverage-check": "jest --coverage --testMatch '**/test/unit/**/*.test.ts'",
    "audit:resolve": "SHELL=sh resolve-audit",
    "audit:check": "SHELL=sh check-audit",
    "dep:check": "npx ncu -e 2",
    "dep:update": "npx ncu -u"
  },
  "dependencies": {
    "kafka-node": "^5.0.0",
    "redis": "^3.0.2",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@types/kafka-node": "^3.0.0",
    "@types/node": "^14.0.4",
    "@types/redis": "^2.8.21",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "faucet": "0.0.1",
    "jest": "^26.0.1",
    "jest-junit": "^10.0.0",
    "npm-audit-resolver": "^2.2.0",
    "npm-check-updates": "^6.0.1",
    "nyc": "^15.0.1",
    "pre-commit": "^1.2.2",
    "prettier": "^2.0.5",
    "ts-jest": "^26.0.0",
    "typedoc": "^0.17.7",
    "typescript": "^3.9.3"
  }
}
