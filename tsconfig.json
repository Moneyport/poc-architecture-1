{
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "test",
    "lib",
    "coverage"
  ],
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": [
      "es2020"
    ],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": [
        "src/*",
        "node_modules/*"
      ],
      "@mojaloop-poc/lib-domain": ["modules/libDomain/src/index.ts"],
      "@mojaloop-poc/lib-utilities": ["modules/libUtilities/src/index.ts"],
      "@mojaloop-poc/lib-public-messages": ["modules/libPublicMessages/src/index.ts"],
      "@mojaloop-poc/lib-infrastructure": ["modules/libInfrastructure/src/index.ts"]
    },
    "esModuleInterop": true
  }
}
